<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFAF53"
    android:orientation="vertical"
    tools:context=".CategoryPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/toplayout"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="57dp"
            android:layout_height="55dp"
            android:layout_weight="-50"
            app:srcCompat="@drawable/cookbookicon" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="-50"
            android:orientation="vertical">

            <View
                android:id="@+id/divider5"
                android:layout_width="5dp"
                android:layout_height="2.5dp"
                android:background="#FFAF53" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="0"
                android:text="TextView"
                android:textAlignment="center"
                android:textSize="34sp"
                tools:text="Recipes" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:id="@+id/divider7"
                android:layout_width="200dp"
                android:layout_height="10dp"
                android:layout_weight="-50"
                android:background="#FFC107" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="-50"
                android:orientation="horizontal">

                <View
                    android:id="@+id/divider9"
                    android:layout_width="180dp"
                    android:layout_height="0dp"
                    android:layout_weight="-50"

                    android:background="#FFC107" />

                <ImageButton
                    android:id="@+id/returnToRecipeListBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="-50"
                    android:background="#FFC107"
                    app:srcCompat="@drawable/returnbtn" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="-50"
        android:orientation="vertical">

        <View
            android:id="@+id/divider3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="?android:attr/listDivider" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </ScrollView>

        <View
            android:id="@+id/divider4"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="?android:attr/listDivider" />

        <Button
            android:id="@+id/addRecipeBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#c57e39"
            android:text="Add Recipe" />
    </LinearLayout>

</LinearLayout>