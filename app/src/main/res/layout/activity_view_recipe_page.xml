<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ViewRecipePage">

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Recipe Name -->
            <TextView
                android:id="@+id/recipeDisplay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textStyle="bold"
                android:text="Recipe Name"
                android:paddingBottom="8dp" />

            <!-- Recipe Description -->
            <TextView
                android:id="@+id/descDisplay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Recipe Description"
                android:paddingBottom="16dp"/>

            <!-- Ingredients Section -->
            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="Ingredients"
                android:paddingBottom="4dp" />

            <ListView
                android:id="@+id/listViewIngredients"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:divider="@android:color/darker_gray"
                android:dividerHeight="1dp"
                android:background="#EEEEEE" />

            <!-- Steps Section -->
            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="Preparation Steps"
                android:paddingTop="16dp"
                android:paddingBottom="4dp" />

            <ListView
                android:id="@+id/listViewSteps"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:divider="@android:color/darker_gray"
                android:dividerHeight="1dp"
                android:background="#EEEEEE" />
        </LinearLayout>
    </ScrollView>

    <!-- Fixed Button at Bottom -->
    <Button
        android:id="@+id/editViewRecipeBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Edit Recipe"
        android:textColor="@android:color/white" />

</LinearLayout>
